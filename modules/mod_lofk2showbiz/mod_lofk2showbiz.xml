<?xml version="1.0" encoding="iso-8859-1"?>
<extension
	type="module"
	version="1.7"
	client="site"
	method="upgrade">
    <name>Lof K2 Showbiz Module</name>
    <creationDate>December 2011</creationDate>
    <author>LandOfCoder</author>
    <copyright>GNU / GPL2 http://www.gnu.org/licenses/gpl-2.0.html</copyright>
    <authorEmail>landofcoder@gmail.com</authorEmail>
    <authorUrl>http://www.landofcoder.com</authorUrl>
    <version>2.0</version>
	<description>
		<![CDATA[<div style="font-size:11px">
			<a target="_blank" href="http://landofcoder.com/our-porfolios/joomla-commercial-extensions/item/47-joomla-lof-slidingcaption-module.html">. <b>Lof SlidingCaption module  Module</b></a> <br><i>The K2 Lof Scroller Module is a integration module working with the k2 component, allows displaying the list of k2 items in a grid and pages . The module has three 3 main functions: Showcase, Recent viewed and Same In Category  and combine the smooth scrolling effect, Opacity Hovering Effect of the mootools plugin, it's easy to select a proper function, take a look and feel very impressive for your site.</i><br/><br/><b>Support:</b><br><ul><li><a href="http://landofcoder.com/forum/supports.html" target="_blank">Forum Support</a></li><li><a href="http://landofcoder.com/submit-request.html" target="_blank">Submit Request</a></li></ul><p><img style="width:100%" src="../modules/mod_lofk2showbiz/assets/preview.png"></p><p><br><div style="clear:both"><b>Copyright:</b> <a target="_blank" href="http://landofcoder.com">LandOfCoder.Com</a></div></p>
			</div>
		]]>
	</description>
    <files>
		<filename module="mod_lofk2showbiz">mod_lofk2showbiz.php</filename>
		<filename module="mod_lofk2showbiz">helper.php</filename>
		<filename module="mod_lofk2showbiz">index.html</filename>
		<folder module="mod_lofk2showbiz">libs</folder>
		<folder module="mod_lofk2showbiz">assets</folder>
		<folder module="mod_lofk2showbiz">tmpl</folder>
    </files>
	<languages>
		<language tag="en-GB">languages/en-GB.mod_lofk2showbiz.ini</language>
	</languages>
	<config>
		<fields 
			name="params" 
			addfieldpath="modules/mod_lofk2showbiz/libs/elements">
			  
                <fieldset name="navigator_form" title="NAVIGATOR_FORM_F">
                    <field  type="loftoolbar" name="loftoolbar">
                    	<option>Global</option>
                    	<option>Data Source</option>
                    	<option>Item Layout</option>
                    	<option>Column</option>
                    	<option>Page</option>
                    	<option>Advanded</option>
                    </field>
                </fieldset>
                
                <fieldset 
                    name="Basic" label="GLOBALSETTING">
                    <field type="lofspacer" />
                    <field 
                        name="moduleclass_sfx" 
                        type="text" 
                        default="" 
                        label="MODULE_CLASS_SUFFIX" 
                        description="MODULE_CLASS_SUFFIX_DESC" 
                    />	
                    
                    <field 
                        name="theme" 
                        type="folderlist" 
                        hide_none="true"
                        hide_default="true"
                        label="SELECT_THEME" 
                        default="default" 
                        directory="modules/mod_lofk2showbiz/tmpl/" 
                        filter="" 
                        exclude="_navigator|_contentslider|_item" 
                        stripext="" />
                    <field 
                        name="style_showbiz" 
                        type="list" 
                        default="0" 
                        label="STYLE_SHOWBIZ"
                        description="STYLE_SHOWBIZ_DESC">
                        	<option value="0">Showbiz Carousel</option>
                        	<option value="1">Showbiz Scroller</option>
                        
                    </field> 
                    <field 
                        name="moduleicon" 
                        type="list" 
                        default="-1" 
                        label="MODULE_ICON"
                        description="MODULE_ICON_DESC">
                            <option value="-1">None Icon</option>
                        	<option value="0">Featured</option>
                        	<option value="1">Hot</option>
                            <option value="2">New</option>
                        
                    </field>   
                    <field 
                        name="display_button" 
                        type="radio" 
                        default="1" 
                        label="DISPLAY_BUTTON"
                        description="DISPLAY_BUTTON_DESC">
                        	<option value="0">DISABLE</option>
                        	<option value="1">ENABLE</option>
                        	<option value="2">HOVER</option>
                    </field>
                </fieldset>
                <fieldset name="DATA_SOURCE">
                    <field name="data_source" type="folderlist" hide_none="true" hide_default="true" default="k2" label="SELECT_GROUP" directory="modules/mod_lofk2showbiz/libs/source/" filter="" exclude="" stripext="" />
                    <field name="limit_items" type="text" default="10" label="LIMIT_ITEMS" description="LIMIT_ITEMS_DESC" />	
                </fieldset>
                <fieldset name="K2SETTING">	
                    <field name="k2_source" type="radio" default="k2_category" label="SOURCE_FROM"  description="SOURCE_FROM_DESC" >
                    	<option value="k2_category">CATEGORY</option>
                    	<option value="k2_items_ids">K2 Item Ids</option>
                    </field>
                    <field name="k2_items_ids" type="text" default="" label="K2 Item Ids"  description="ARTICLES_IDS_DESC" size="70" />
                    <field name="k2_category" type="categoriesmultiple" default="" label="JCATEGORY"  description="MOD_ARTICLES_NEWS_FIELD_CATEGORY_DESC" />
                    <field name="featured_items_show" type="list" default="1" label="MOD_LATEST_NEWS_FIELD_FEATURED_LABEL" description="MOD_LATEST_NEWS_FIELD_FEATURED_DESC">
                        <option value="0">HIDE</option>
                        <option value="1">SHOW</option>
                        <option value="2">ONLY_FEATURED_ITEMS</option>
                    </field>
                    <field name="k2_ordering" type="list" default="created_asc" label="ARTCILES_SORTED_BY" description="ARTCILES_SORTED_BY_DESC">
                    	<option value="ordering_asc">ORDERING_ASCENDING</option>
                    	<option value="ordering_desc">ORDERING_DESCENDING</option>
                    	<option value="hits_asc">HIT_ASCENDING</option>
                    	<option value="hits_desc">HIT_DESCENDING</option>
                    	<option value="created_desc">DATE_ASCENDING</option>
                    	<option value="created_asc">DATE_DESCENDING</option>
                    </field>
                </fieldset>	
	
                <fieldset name="itemlayoutsetting" label="Item Layout Setting">
                    <field name="max_hit" type="text" default="-1" label="VALUE_HIT_HOT" description="VALUE_HIT_HOT_DESC"></field>
                    <field name="newLevels" type="text" default="-1" label="NEW_LEVELS" description="NEW_LEVELS_DESC"></field>
                    <field name="show_icon_featured" type="radio" default="1" label="ENABLE_FEATURED_ICON" description="ENABLE_FEATURED_ICON_DESC">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                    </field>
                    
                    <field name="limit_description_by" type="list" default="char" label="LIMIT_DESCRIPTION_BY" description="LIMIT_DESCRIPTION_BY_DESC">
                    	<option value="word">WORD</option>
                    	<option value="char">CHARACTER</option>
                    </field>  
                    <field name="description_max_chars" type="text" default="100" label="DESCIPTION_MAX_CHARS" description="DESCIPTION_MAX_CHARS_DESC" />
                    <field name="subtitle_max_chars" type="text" default="20" label="SUBTITLE_MAX_CHARS" description="SUBTITLE_MAX_CHARS_DESC" />
                    	
                    <field
                    	name="show_readmore"
                    	type="radio" 
                    	default="1"
                    	label="SHOW_READ_MORE" 
                    	description="SHOW_READ_MORE_DESC">
                    		<option value="0">JNO</option>
                    		<option value="1">JYES</option>
                    </field>
                    
                    <field
                    	name="link_image_showbiz"
                    	type="radio" 
                    	default="1"
                    	label="LINK_IMAGE"
                    	description="LINK_IMAGE_DESC">
                    		<option value="0">JNO</option>
                    		<option value="1">JYES</option>
                    </field> 
                    
                    <field
                    	name="show_desc"
                    	type="radio" 
                    	default="1"
                    	label="SHOW_DESCRIPTION"
                    	description="SHOW_DESCRIPTION_DESC">
                    		<option value="0">JNO</option>
                    		<option value="1">JYES</option>
                    </field>
                    <field
                    	name="show_title"
                    	type="radio" 
                    	default="1"
                    	label="SHOW_TITLE"
                    	description="SHOW_TITLE_DESC">
                    		<option value="0">JNO</option>
                    		<option value="1">JYES</option>
                    </field>
                    
                    <field
                    	name="link_title"
                    	type="radio" 
                    	default="1"
                    	label="LINK_TITLE"
                    	description="LINK_TITLE_DESC">
                    		<option value="0">JNO</option>
                    		<option value="1">JYES</option>
                    </field>
                    
                    <field 
                    	name="auto_renderthumb" 
                    	type="radio" 
                    	default="1" 
                    	label="RENDER_THUMBNAIL" 
                    	description="RENDER_THUMBNAIL_DESC">
                    		<option value="0">JNO</option>
                    		<option value="1">JYES</option>
                    </field>	
                    
                    <field 
                    	name="slidespacing" 
                    	type="text" 
                    	default="30" 
                    	label="SLIDE_SPACING" 
                    	description="SLIDE_SPACING_DESC" />
                    	
                    <field 
                    	name="main_width" 
                    	type="text" 
                    	default="200" 
                    	label="THUMBMAIN_WIDTH" 
                    	description="THUMBMAIN_WIDTH_DESC" />
                    	
                    <field
                    	name="main_height"
                    	type="text" 
                    	default="110"
                    	label="THUMBMAIN_HEIGHT"
                    	description="THUMBMAIN_HEIGHT_DESC" />
                </fieldset>
		
                <fieldset name="columnsetting" label="COM_MODULES_COLUMN_SETTING_FIELDSET_LABEL">
                
                    <field
                    	name="module_width" 
                    	type="text"
                    	default="980"
                    	label="MODULE_WIDTH"
                    	description="MODULE_WIDTH_DESC">
                    </field>	
                    
                    <field 
                    	name="module_height"
                    	type="text" 
                    	default="380" 
                    	label="MODULE_HEIGHT" 
                    	description="MODULE_HEIGHT_DESC">
                    </field>
                    
                    <field 
                    	name="max_items_per_page" 
                    	type="text" 
                    	default="4" 
                    	label="MAX_ITEM_PAGE" 
                    	description="MAX_ITEM_PAGE_DESC">
                    </field>
                
                </fieldset>

                <fieldset name="effectsetting" label="Page Effect Setting">
                    <field 
                		name="mousewheel"
                		type="radio" 
                		default="on" 
                		label="MOUSE_WHEEL"
                		description="MOUSE_WHEEL_DESC">
                			<option value="off">JNO</option>
                			<option value="on">JYES</option>
                	</field>
                    <field name="duration_slide" type="text" default="300" label="DURATION_SLIDE" description="DURATION_SLIDE_DESC" />
                    <field name="duration_carousel" type="text" default="1500" label="DURATION_CAROUSEL" description="DURATION_CAROUSEL_DESC" />
                </fieldset>
		
        		<fieldset name="advanced">
                    <field
                    	name="enable_jquery"
                    	type="radio" 
                    	default="1"
                    	label="Enable jQuery"
                    	description="Enable jQuery">
                    		<option value="0">JNO</option>
                    		<option value="1">JYES</option>
                    </field> 
            		<field 
            			name="enable_cache" 
            			type="list" 
            			default="0" 
            			label="CACHE" 
            			description="CACHING_DESC">
            				<option value="1">Use global</option>
            				<option value="0">No caching</option>
            		</field>
            		<field name="cache_time" type="text" default="30" label="CACHE_TIME" description="CACHE_TIME_DESC" />
            	
            		<field name="open_target" type="list" default="_parent" label="CLICK_LINK_OPEN_IN" description="CLICK_LINK_OPEN_IN_DESC">
            			<option value="_blank">New window</option>
            			<option value="_parent">Parent window</option>
            		</field>
                    <field name="itemHits" type="radio" default="1" label="Hits (page views)" description="">
                        <option value="0">Hide</option>
                        <option value="1">Show</option>
                    </field>
                    
                    <field name="itemDateCreated" type="radio" default="1" label="Item created date and time" description="">
                        <option value="0">Hide</option>
                        <option value="1">Show</option>
                    </field>
                    <field name="itemComments" type="radio" default="1" label="Comments" description="">
                        <option value="0">Hide</option>
                        <option value="1">Show</option>
                    </field>
                    <field name="itemAuthor" type="radio" default="1" label="Author" description="">
                        <option value="0">Hide</option>
                        <option value="1">Show</option>
                    </field>
                </fieldset>
            	<fieldset name="end_form" title="ENDFORM">
            		<field  type="lofspacer" name="end_form" title="end"/>
                </fieldset>
            </fields>	
	</config>
</extension>
