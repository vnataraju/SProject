		<files folder="admin">
			<filename>box.jpg</filename>
			<filename>backend.zip</filename>
			<filename>admin.community.php</filename>
			<filename>installer.helper.php</filename>
			<filename>defaultItems.php</filename>
			<filename>installer.template.php</filename>
		</files>
		<languages>
			<language tag="en-GB">languages/admin/en-GB.com_community.ini</language>
